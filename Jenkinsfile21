pipeline {
    agent any
    
    stages {
        stage("Hello") {
	   environment {
		My_Username = credentials ("admin-user")
	  }
           steps {
                sh "echo 'username: $My_Username_USR'"
		sh "echo 'password: $My_Username_PSW'"
		def data = "username: $My_Username_USR"
                writeFile(file: 'input1.txt', text: data)
	  }
        }
    }
}
