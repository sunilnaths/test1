pipeline {
    agent any
    
    stages {
        stage('Ok') {
            steps {
                echo "Ok"
            }
        }
    }
    post {
        always {
            emailext(
                subject: "Build ${env.JOB_NAME} - ${currentBuild.displayName} ${currentBuild.result}",
                body: """Build ${currentBuild.result}
                    ${env.JOB_URL}
                    """,
                recipientProviders: [[$class: 'DevelopersRecipientProvider']]
            );
        }
    }
}
